    "**/*.spec.ts"
  ],
  "include": [
    "./ng2-vizabi.ts",
    "./components/vizabi.ts",
    "./demo/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
