    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "exclude": [
